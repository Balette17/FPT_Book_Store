@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<FPTBook.Models.Book>

<h1>Hello tinh</h1>

<form asp-controller="Home" asp-action="Search" method="get">
    <div class="input-group">
        <input type="text" class="form-control" name="searchTerm" placeholder="Tìm kiếm sách...">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
        </div>
    </div>
</form>


<div class="container d-flex justify-content-center mt-100">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="product-wrapper mb-45 text-center">
                    <div class="product-img">
                        <a href="#" data-abc="true">
                            <img src="~/Image/@item.ImgFileName" alt="Image" style="width: 250px; height: 350px">
                        </a>
                        <span class="text-center"><i class="fa fa-rupee"></i> @item.Price</span>
                        <div class="product-action">
                            <div class="product-action-style">
                                <a href="#"> <i class="fa fa-plus"></i> </a>
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-heart"></i></a>
                                <a href="#"> <i class="fa fa-shopping-cart"></i> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>